{
  "compilerOptions": {
    /* Target & runtime */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],

    /* Next / bundler */
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "isolatedModules": true,
    "noEmit": true,

    /* Type safety */
    "strict": true,
    "skipLibCheck": true,

    /* Interop (vigtigt for Leaflet) */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* DX */
    "incremental": true,
    "resolveJsonModule": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }

    /* ⚠️ INTET "types": [] her */
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}